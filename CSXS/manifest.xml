<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ExtensionManifest ExtensionBundleId="com.syruii.coldwarm"
                   ExtensionBundleName="Coldwarm HTML5"
                   ExtensionBundleVersion="1.0"
                   Version="5.0">
    <ExtensionList>
        <Extension Id="com.syruii.coldwarm" Version="0.1"/>
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
            <Host Name="PHXS" Version="[15.0,19.9]" />
            <Host Name="PHSP" Version="[15.0,19.9]" />
        </HostList>
        <LocaleList>
            <Locale Code="All"/>
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="5.0"/>
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    <DispatchInfoList>
        <Extension Id="com.syruii.coldwarm">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./host/ps.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                    </CEFCommandLine>
                </Resources>
                <UI>
                    <Type>Panel</Type>
                    <Menu>ColdWarm 2</Menu>
                    <Geometry>
                        <Size>
                            <Height>295</Height>
                            <Width>320</Width>
                        </Size>
                        <MaxSize>
							<Height>600</Height>
							<Width>630</Width>
						</MaxSize>
						<MinSize>
							<Height>295</Height>
							<Width>320</Width>
                        </MinSize>
                    </Geometry>
					<Icons>
						<Icon Type="Normal"		 >./assets/Icon.png</Icon>
						<Icon Type="RollOver"	 >./assets/Icon.png</Icon>
						<Icon Type="DarkNormal"	 >./assets/IconDark.png</Icon>
						<Icon Type="DarkRollOver">./assets/IconDark.png</Icon>
                    </Icons>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>
